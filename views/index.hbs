<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Angry Caching Proxy</title>
        <style type="text/css" media="screen">
            table {
                text-align: left;
            }
            .deleted {
                text-decoration: line-through;
            }
        </style>
    </head>
    <body>
        <a href="https://github.com/epeli/angry-caching-proxy"><img style="position: absolute; top: 0; right: 0; border: 0;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub"></a>
      <h1>Angry Caching Proxy</h1>

      <p>Cached requests in {{cacheDir}}</p>

      <table>
          <tr>
              <th>method</th>
              <th>cached url</th>
              <th>bytes</th>
              <th>url sha1</th>
          </tr>

          {{#each files}}
          <tr class="url-row">
              <td>{{method}}</td>
              <td>{{url}}</td>
              <td>{{size}}</td>
              <td>{{sha1}}</td>
              <td><button class="delete" data-sha1="{{sha1}}" >delete</button></td>
          </tr>
          {{/each}}

          <tr>
              <th></th>
              <th>Total {{total}}</th>
              <th></th>
              <th>
                  <form action="/deleteall" method="post" accept-charset="utf-8">
                      <p><input type="submit" value="delete all"></p>
                  </form>
              </th>
          </tr>


      </table>
    </body>
    <script type="text/javascript" charset="utf-8" src="/client.js"> </script>
</html>
